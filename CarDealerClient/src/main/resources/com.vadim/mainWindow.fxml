                  <Stop>
                     <color>
                        <Color red="0.2370370328426361" green="0.8092592358589172" blue="1.0" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="0.23999999463558197" green="1.0" blue="0.7964975237846375" />
